<%- include('Layout/header') %>

<div class="container"> 
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light ">Add new recepie</h3> 
                </div> 
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form">
					<div class="mb-3">
					<label for="name">Name </label>
							<input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required />
                        </div>
                        <div class="mb-3">
                            <label for="price">prix</label> 
                            <input type="text" name="price" class="form-control form-control-lg" placeholder="Enter price" required />
                        </div>
                        <div class="mb-3">
                            <label for="details">details</label> 
                            <input type="text" name="details" class="form-control form-control-lg" placeholder="Enter details" required />
                        </div>
                        <div class="mb-3">
                            <label for="file" class="form-label">Select Image</label> 
                            <input class="form-control form-control-lg" type="file" name="file" required /> 
                        </div>
                        <div class="10-3 d-grid">
                        <input type="submit" name="submit" value="Add recepie" class="btn btn-primary btn-lg" /> 
                        </div> 
                    </form> 
                    
            </div> 
        </div> 
    </div>
</div>
        
<%- include('Layout/footer') %>